{
	"extends": "./tsconfig.app.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"noEmit": false,
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": [
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx",
		"src/test/**/*",
		"e2e/**/*"
	]
}
