{
	"name": "Light Modern",
	"id": "light-modern",
	"colors": {
		"primary": "#6366f1",
		"primaryHover": "#4f46e5",
		"primaryLight": "#818cf8",
		"secondary": "#8b5cf6",
		"success": "#10b981",
		"error": "#ef4444",
		"warning": "#f59e0b",
		"background": "#ffffff",
		"surface": "#f9fafb",
		"surfaceHover": "#f3f4f6",
		"border": "#e5e7eb",
		"borderFocus": "#6366f1",
		"text": "#111827",
		"textSecondary": "#6b7280",
		"textMuted": "#9ca3af",
		"shadow": "rgba(0, 0, 0, 0.1)",
		"shadowMedium": "rgba(0, 0, 0, 0.15)",
		"shadowLarge": "rgba(0, 0, 0, 0.2)",
		"overlay": "rgba(0, 0, 0, 0.5)"
	},
	"spacing": {
		"xs": "0.25rem",
		"sm": "0.5rem",
		"md": "1rem",
		"lg": "1.5rem",
		"xl": "2rem",
		"2xl": "3rem"
	},
	"borderRadius": {
		"sm": "0.375rem",
		"md": "0.5rem",
		"lg": "0.75rem",
		"xl": "1rem",
		"full": "9999px"
	},
	"typography": {
		"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif",
		"fontSizeBase": "1rem",
		"fontSizeSmall": "0.875rem",
		"fontSizeLarge": "1.125rem",
		"fontSizeH1": "2rem",
		"fontSizeH2": "1.5rem",
		"fontSizeH3": "1.25rem",
		"fontWeightNormal": "400",
		"fontWeightMedium": "500",
		"fontWeightSemibold": "600",
		"fontWeightBold": "700",
		"lineHeight": "1.5",
		"lineHeightTight": "1.25"
	},
	"effects": {
		"transition": "all 0.2s ease-in-out",
		"transitionSlow": "all 0.3s ease-in-out",
		"shadowButton": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
		"shadowCard": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
		"shadowModal": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
	},
	"components": {
		"input": {
			"height": "2.75rem",
			"paddingX": "1rem",
			"fontSize": "1rem",
			"borderWidth": "1px",
			"focusRing": "0 0 0 3px rgba(99, 102, 241, 0.1)"
		},
		"button": {
			"height": "2.75rem",
			"paddingX": "1.5rem",
			"fontSize": "1rem",
			"fontWeight": "600",
			"borderRadius": "0.5rem"
		},
		"modal": {
			"maxWidth": "32rem",
			"padding": "2rem",
			"borderRadius": "1rem"
		},
		"card": {
			"padding": "1.5rem",
			"borderRadius": "1rem"
		}
	}
}
